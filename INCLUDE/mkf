

PRF=$(SPATH)/all/porfuncs.sh
RCA=$(SPATH)/all/rca.sh
DV=$(SPATH)/all/dv.sh
HEADER=$(SPATH)/all/header.sh

DVOPTS=fflags "${FFLAGS}" prog $(PROGNAME) fc_exec "${FC}" make_opts "${MAKE_OPTS}" 

porfuncs.f90: $(PRF)
	$(PRF) ${SWITCH} > $@

rca.f90: $(RCA)
	$(RCA) $(PROGNAME) > $@

dv.f90: ${DV} 
	${DV} ${DVOPTS} > $@

header.f90: ${HEADER} 
	${HEADER} > $@

deps:
	$(shell mkdep)
